{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
